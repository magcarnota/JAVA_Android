CREATE TABLE IF NOT EXISTS minerales(_id INTEGER PRIMARY KEY AUTOINCREMENT, nombre TEXT NOT NULL, composicion TEXT NOT NULL, disponibilidad INTEGER, dureza INTEGER NOT NULL, fecha LONG, notas TEXT);
